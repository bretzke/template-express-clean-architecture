{
  "name": "template-express-clean-architecture",
  "version": "1.0.0",
  "author": "Willian Bretzke",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "dev": "ts-node-dev --respawn --transpile-only -r dotenv/config -r tsconfig-paths/register src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "express": "^5.1.0",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.1.0",
    "dotenv": "^17.2.1",
    "prettier": "^3.6.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3"
  }
}
